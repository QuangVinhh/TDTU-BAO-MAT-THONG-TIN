<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Advanced Encryption System</title>
</head>

<body>

    <div class="container-fluid p-5">
        <div class="col-xl-12 col-lg-6 col-md-8 col-sm-11 bg-white mx-auto shadow-lg rounded-lg border">
            <div class="p-sm-3">
                <h3 class="text-primary mb-4">Server B</h3>

                <div class="row">

                    <!-- ENCRYPT -->

                    <div class="col-md-6 border-danger border-end border-2">
                        <form method="POST" action="/encryptServerB" class="form-horizontal w-100">
                            <div class="form-group mb-3">
                                <label class="form-label col-sm-5 fw-bold" for="secretkey">Secret Key</label>
                                <input type="password" class="form-control" name="secretkey" placeholder="Enter key"
                                    required>
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label col-sm-2 fw-bold" for="text">Document</label>
                                <textarea class="form-control" name="text" rows="7" placeholder="Enter text"></textarea>
                            </div>

                            <div class="form-group mb-3">
                                <button type="submit" class="btn btn-warning fw-bold text-light">Send and
                                    Encrypt</button>
                                <button type="reset" class="btn btn-secondary fw-bold">Clear</button>
                            </div>
                        </form>
                    </div>

                    <!-- DECRYPT -->

                    <div class="col-md-6">
                        <form method="POST" action="/decryptServerB" class="form-horizontal w-100">
                            <div class="form-group mb-3">
                                <label class="form-label col-sm-5 fw-bold" for="secretkey">Secret Key</label>
                                <input type="password" class="form-control" name="secretkey" placeholder="Enter key"
                                    required>
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label col-sm-2 fw-bold" for="text">Document</label>
                                <textarea class="form-control" name="text" rows="7" placeholder="Enter text"></textarea>
                            </div>

                            <div class="form-group mb-3">
                                <button type="submit" class="btn btn-danger fw-bold">Decrypt</button>
                                <button type="reset" class="btn btn-secondary fw-bold">Clear</button>
                            </div>
                        </form>
                    </div>

                    <!-- RESULT -->

                    <h3 class="text-primary mt-5 mb-3">Result Advanced Encryption System</h3>

                    <div class="col-md-12 w-100">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Status</th>
                                    <th>Content</th>
                                    <th>Result</th>
                                </tr>
                            </thead>
                            <tbody>

                                <% database.forEach(function(item, index){ %>
                                    <tr>
                                        <td>
                                            <%= item.status %>
                                        </td>

                                        <td>
                                            <%= item.content %>
                                        </td>

                                        <td>
                                            <%= item.result %>
                                        </td>
                                    </tr>
                                    <% }) %>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>